<launch>
    <!-- 摄像头驱动 -->
    <node pkg="usb_cam" type="usb_cam_node" name="usb_cam">
        <param name="video_device" value="/dev/video0"/>
        <param name="image_width" value="640"/>
        <param name="image_height" value="480"/>
    </node>

    <!-- 节点启动 -->
    <node pkg="barcode_navigation" type="barcode_reader.py" name="barcode_reader"/>
    <node pkg="barcode_navigation" type="database_handler.py" name="database_handler"/>
    <node pkg="barcode_navigation" type="navigation_controller.py" name="navigation_controller"/>
    <node pkg="barcode_navigation" type="serial_communicator.py" name="serial_communicator"/>
    
    <!-- 导航配置 -->
    <include file="$(find barcode_navigation)/launch/move_base.launch"/>
</launch>